<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="portal_my_home_customer_subscription"
        name="Portal My Home : customer Subscription"
        inherit_id="portal.portal_my_home"
        priority="30"
    >
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">My Subscriptions</t>
                <t t-set="url" t-value="'/my/subscriptions'" />
                <t t-set="count" t-value="subscription_count" />
            </t>
        </xpath>
    </template>

    <template id="portal_layout_customer_subscription" name="Portal layout : customer Subscription" inherit_id="portal.portal_breadcrumbs" priority="25">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'subscription' or subscription" t-attf-class="breadcrumb-item #{'active' if subscription else ''}">
                <a t-if="subscription" t-attf-href="/my/subscriptions?{{ keep_query() }}">My Subscriptions</a>
                <t t-else="">Subscriptions</t>
            </li>
            <li t-if="subscription" class="breadcrumb-item active">
                <t t-esc="subscription.name" />
            </li>
        </xpath>
    </template>


    <template id="portal_my_subscriptions" name="My Subscriptions">
    <t t-call="portal.portal_layout">
        <t t-set="breadcrumbs_searchbar" t-value="True" />
        <t t-call="portal.portal_searchbar">
            <t t-set="title">Subscriptions</t>
        </t>
        <div class="form-inline ml-lg-4" t-if="request.env.user.partner_id">
            <a href="/my/subscription/new" class="btn btn-primary btn-sm" title="Create New Subscription" aria-label="Create New Subscription">
                <i class="fa fa-plus"></i> Create New Subscription
            </a>
        </div>
        <t t-if="not subscriptions">
            <p>There are currently no Subscriptions for your account.</p>
        </t>
        <t t-if="subscriptions" t-call="portal.portal_table">
            <thead>
                <tr class="active portal_my_subscriptions_list">
                    <th>Description</th>
                    <th class="text-right">Date</th>
                    <th>Partner</th>
                    <th class="text-right">Total</th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="subscriptions" t-as="subscription">
                    <tr>
                        <td>
                            <a t-attf-href="/my/subscription/#{subscription.id}?{{ keep_query() }}">
                                <t t-esc="subscription.name" />
                            </a>
                        </td>
                        <td class="text-right">
                            <span t-field="subscription.date" />
                        </td>
                        <td>
                            <span t-esc="subscription.partner_id and subscription.partner_id.display_name" />
                        </td>
                        <td class="text-right">
                            <span t-field="subscription.total_amount" />
                        </td>
                    </tr>
                </t>
            </tbody>
        </t>
    </t>
</template>

</odoo>

